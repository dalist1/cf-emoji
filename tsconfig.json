{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src/index.ts", "src/implementations.ts"],
  "exclude": ["node_modules", "dist", "benchmark", "**/*.test.ts"]
}
